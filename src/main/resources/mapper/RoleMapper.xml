<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.wenzhuo4657.blog.admin.dao.RoleMapper">

    <sql id="Base_Column_List">
        id,role_name,role_key,
        role_sort,status,del_flag,
        create_by,create_time,update_by,
        update_time,remark
    </sql>
    <select id="getRoleById" resultType="java.lang.String">
        select DISTINCT role_key
        from sys_role r
            right join  sys_user_role  u_s on  u_s.role.id=r.id
        where  u_s.id=#{id}
    </select>
    <select id="selectByRolevo" resultType="cn.wenzhuo4657.blog.admin.domain.enity.Role">
        select *
        from sys_role r
        <where>
            and del_flag=0
        </where>
    </select>

</mapper>
